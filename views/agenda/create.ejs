<h1>Cadastrar Nova Agenda</h1>
<form action="/agenda" method="POST">
    <div class="form-group">
        <label for="clientes">Clientes</label>
        <select class="form-control" id="clientes" name="clientes" required>
            <option value="">Selecione um cliente</option>
            <% if (clientes && clientes.length > 0) { %>
                <% clientes.forEach(cliente => { %>
                    <option value="<%= cliente.cod %>"><%= cliente.nome %></option>
                <% }); %>
            <% } else { %>
                <option value="">Nenhum cliente disponível</option>
            <% } %>
        </select>
    </div>

    <div class="form-group">
        <label for="procedimentos">Procedimentos</label>
        <select class="form-control" id="procedimentos" name="procedimentos" required>
            <option value="">Selecione um procedimento</option>
            <% if (procedimentos && procedimentos.length > 0) { %>
                <% procedimentos.forEach(procedimento => { %>
                    <option value="<%= procedimento.cod %>"><%= procedimento.nome %></option>
                <% }); %>
            <% } else { %>
                <option value="">Nenhum procedimento disponível</option>
            <% } %>
        </select>
    </div>

    <div class="form-group">
        <label for="profissional">Profissional</label>
        <input type="text" class="form-control" id="profissional" name="profissional" required autocomplete="off">
    </div>

    <div class="form-group">
        <label for="forma_pag">Forma de Pagamento</label>
        <input type="text" class="form-control" id="forma_pag" name="forma_pag" required autocomplete="off">
    </div>

    <div class="form-group">
        <label for="data">Data</label>
        <input type="date" class="form-control" id="data" name="data" required>
    </div>

    <div class="form-group">
        <label for="hora">Hora</label>
        <input type="time" class="form-control" id="hora" name="hora" required>
    </div>

    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>
