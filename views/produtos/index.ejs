<h1 class="mb-4">Lista de Produtos</h1>
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Valor</th>
            <th>Marca</th>
            <th>Descrição</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        <% produtos.forEach(produto => { %>
            <tr>
                <td><%= produto.cod %></td>
                <td><%= produto.nome %></td>
                <td>R$ <%= produto.valor %></td>
                <td><%= produto.marca %></td>
                <td><%= produto.descricao %></td>
                <td>
                    <a href="/produtos/<%= produto.cod %>" class="btn btn-primary btn-sm">Ver</a>
                    <a href="/produtos/<%= produto.cod %>/edit" class="btn btn-warning btn-sm">Editar</a>
                    <form action="/produtos/<%= produto.cod %>?_method=DELETE" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
