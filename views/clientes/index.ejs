<h1 class="text-center my-4">Lista de Clientes</h1>

<table class="table table-striped table-bordered container shadow">
    <thead class="table-dark">
        <tr>
            <th>Nome</th>
            <th>Gênero</th>
            <th>Endereço</th>
            <th>Telefone</th>
            <th>Email</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        <% clientes.forEach(cliente => { %>
            <tr>
                <td><%= cliente.nome %></td>
                <td><%= cliente.genero %></td>
                <td><%= cliente.endereco %></td>
                <td><%= cliente.fone %></td>
                <td><%= cliente.email %></td>
                <td>
                    <a href="/clientes/<%= cliente.cod %>" class="btn btn-info btn-sm">Ver</a>
                    <a href="/clientes/<%= cliente.cod %>/edit" class="btn btn-warning btn-sm">Editar</a>
                    <form action="/clientes/<%= cliente.cod %>?_method=DELETE" method="POST" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
