<h1 class="text-center my-4">Listagem de Procedimentos</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Valor</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        <% procedimentos.forEach(procedimento => { %>
            <tr>
                <td><%= procedimento.cod %></td>
                <td><%= procedimento.nome %></td>
                <td><%= procedimento.descricao %></td>
                <td>R$ <%= (parseFloat(procedimento.valor) || 0).toFixed(2) %></td>
                <td>
                    <a href="/procedimentos/<%= procedimento.cod %>" class="btn btn-primary btn-sm">Detalhes</a>
                    <a href="/procedimentos/<%= procedimento.cod %>/edit" class="btn btn-warning btn-sm">Editar</a>
                    <form action="/procedimentos/<%= procedimento.cod %>?_method=DELETE" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
