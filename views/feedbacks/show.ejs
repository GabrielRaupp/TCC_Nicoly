<h1 class="text-center my-4">Detalhes do Feedback</h1>

<div class="container p-4 shadow rounded bg-light">
    <p><strong>ID:</strong> <%= feedback.cod %></p>
    <p><strong>Comentário:</strong> <%= feedback.comentario %></p>
    <p><strong>Avaliação:</strong> <%= feedback.avaliacao %></p>
    <p><strong>Cliente:</strong> <%= feedback.cliente_nome %></p>
    <p>
        <strong>Foto:</strong>
        <% if (feedback.foto) { %>
            <img src="<%= feedback.foto %>" alt="Foto do feedback" class="img-thumbnail mt-2" style="max-width: 150px;">
        <% } else { %>
            <em>Sem foto</em>
        <% } %>
    </p>

    <div class="d-flex gap-2 mt-4">
        <a href="/feedbacks/<%= feedback.cod %>/edit" class="btn btn-warning">Editar</a>
        <form action="/feedbacks/<%= feedback.cod %>" method="POST" style="display:inline;">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-danger">Excluir</button>
        </form>
        <a href="/feedbacks" class="btn btn-secondary">Voltar</a>
    </div>
</div>
