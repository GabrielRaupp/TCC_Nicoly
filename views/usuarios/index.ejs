<h1 class="mb-4">Lista de Usuários</h1>
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        <% if (usuarios && usuarios.length > 0) { %>
            <% usuarios.forEach(usuario => { %>
                <tr>
                    <td><%= usuario.cod %></td>
                    <td><%= usuario.nome %></td>
                    <td>
                        <a href="/usuarios/<%= usuario.cod %>" class="btn btn-primary btn-sm">Ver</a>
                        <a href="/usuarios/<%= usuario.cod %>/edit" class="btn btn-warning btn-sm">Editar</a>
                        <form action="/usuarios/<%= usuario.cod %>?_method=DELETE" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="3" class="text-center">Nenhum usuário encontrado.</td>
            </tr>
        <% } %>
    </tbody>
</table>
